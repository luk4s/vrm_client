# Authentication (choose one method)
VRM_AUTH_MODE=token
VRM_AUTH_TOKEN=your_api_token

# Alternative authentication method
#VRM_AUTH_MODE=credentials
#VRM_USERNAME=your_email@example.com
#VRM_PASSWORD=your_password

# InfluxDB Configuration
INFLUXDB_URL=https://your-influxdb-cloud-instance.cloud
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=your_organization
INFLUXDB_BUCKET=victron_data

# Data collection settings
DATA_COLLECTION_INTERVAL=5  # seconds
LOG_LEVEL=INFO

